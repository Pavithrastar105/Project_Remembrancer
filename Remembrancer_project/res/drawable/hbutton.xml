<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_focused="true">
        <shape android:shape="0">
            <corners android:radius="12px" />
            <gradient android:startColor="#fffefefe" android:endColor="#ffffffff" android:angle="90.0" android:type="0" />
            <padding android:left="4px" android:top="7px" android:right="4px" android:bottom="7px" />
            <stroke android:width="2px" android:color="#ff000000" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="0">
            <corners android:radius="12px" />
            <gradient android:startColor="#fffefefe" android:endColor="#ffffffff" android:angle="270.0" android:type="0" />
            <padding android:left="4px" android:top="7px" android:right="4px" android:bottom="7px" />
            <stroke android:width="2px" android:color="#ff000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="0">
            <corners android:radius="12px" />
            <gradient android:startColor="#fffefefe" android:endColor="#ffffffff" android:angle="90.0" android:type="0" />
            <padding android:left="4px" android:top="7px" android:right="4px" android:bottom="7px" />
            <stroke android:width="2px" android:color="#ff000000" />
        </shape>
    </item>
</selector>
